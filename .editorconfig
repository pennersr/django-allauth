# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ini]
indent_size = 4

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
